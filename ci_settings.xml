<settings>
    <servers>
        <server>
            <id>gitlab-maven</id>
            <configuration>
                <httpHeaders>
                    <property>
                        <name>Job-Token</name>
                        <value>${env.CI_JOB_TOKEN}</value>
                    </property>
                </httpHeaders>
                <username>${GIT_USERNAME}</username>
                <password>${GIT_PASSWORD}</password>
            </configuration>
        </server>

        <server>
            <id>gitlab-dep-repo</id>
            <configuration>
                <httpHeaders>
                    <property>
                        <name>Job-Token</name>
                        <value>${env.CI_JOB_TOKEN}</value>
                    </property>
                </httpHeaders>
                <username>${GIT_USERNAME}</username>
                <password>${GIT_PASSWORD}</password>
            </configuration>
        </server>
    </servers>
</settings>